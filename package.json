{
	"name": "servly",
	"version": "2.0.0",
	"description": "Tool to create cloud independent serverless backends. ",
	"author": "Utily Contributors",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/utily/servly"
	},
	"bugs": {
		"url": "https://github.com/utily/servly/issues"
	},
	"homepage": "https://github.com/utily/servly",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.test.json"
			}
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"lint": "eslint '*/**/*.{js,ts,tsx}'",
		"fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
		"build": "tsc -p .",
		"pretest": "npm run build",
		"test": "jest",
		"prepare": "npm run build",
		"clean": "rm -rf dist node_modules coverage"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=16.0.0"
	},
	"dependencies": {
		"gracely": "2.0.2",
		"isoly": "2.0.3",
		"node-fetch": "^3.2.7"
	},
	"devDependencies": {
		"@types/jest": "^28.1.6",
		"@types/node-fetch": "^2.5.7",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.30.6",
		"eslint": "^8.19.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20220323",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^28.1.3",
		"prettierx": "github:utily/prettierx#utily-20220323",
		"ts-jest": "^28.0.7",
		"typescript": "^4.7.4"
	}
}
