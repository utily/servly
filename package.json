{
	"name": "servly",
	"version": "0.4.0",
	"description": "Tool to create cloud independent serverless backends. ",
	"author": "PayFunc",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/payfunc/servly"
	},
	"bugs": {
		"url": "https://github.com/payfunc/servly/issues"
	},
	"homepage": "https://payfunc.com/open-source/servly",
	"private": false,
	"main": "dist/cjs/index.js",
	"module": "dist/mjs/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./types/mjs/index.d.ts",
				"default": "./dist/mjs/index.js"
			},
			"require": {
				"types": "./types/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"imports": {
		"#dep": {
			"node": "dep-node-native",
			"default": "./dep-polyfill.js"
		}
	},
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(gracely|isoly|node-fetch|fetch-blob|data-uri-to-buffer|formdata-polyfill)/.*)"
		],
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json"
			}
		},
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '*/**/*.{js,ts,tsx}'",
		"fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
		"build": "rimraf dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup.sh",
		"pretest": "npm run build",
		"test": "jest",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage"
	},
	"dependencies": {
		"gracely": "2.0.6",
		"isoly": "2.0.32",
		"isomorphic-fetch": "^3.0.0"
	},
	"devDependencies": {
		"@types/isomorphic-fetch": "^0.0.37",
		"@types/jest": "^28",
		"@types/node": "^18",
		"@types/node-fetch": "^2",
		"@typescript-eslint/eslint-plugin": "5.61.0",
		"@typescript-eslint/parser": "5.61.0",
		"babel-jest": "^28",
		"eslint": "^8.44.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^28",
		"prettierx": "github:utily/prettierx#utily-0.19.1-utily.3",
		"rimraf": "^5.0.5",
		"ts-jest": "^28",
		"typescript": "^4",
		"watch": "^0.13.0"
	}
}
